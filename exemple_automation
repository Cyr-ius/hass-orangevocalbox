alias: Notification Messages vocaux
description: ''
trigger:
  - platform: state
    entity_id: binary_sensor.vocal_message
    to: 'on'
  - platform: state
    entity_id: binary_sensor.missed_caller
    to: 'on'
condition: []
action:
  - service: persistent_notification.create
    data:
      title: Messagerie vocale
      message: >-
        {% for attr in state_attr('binary_sensor.vocal_message', 'messages') %}

        **Message du** [+{{attr.phone_number}}]({{ attr.link }})
        ({{attr.duration }}s) {% endfor %}

        {% for attr in state_attr('binary_sensor.missed_caller', 'messages') %}

        **Message en absence du** +{{attr.phone_number}} {% endfor %}
mode: single
